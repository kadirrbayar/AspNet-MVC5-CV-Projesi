@using MvcProject.Models.Entity
@model List<Experience>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Tüm Deneyimler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Başlık
                        </th>
                        <th style="width: 30%">
                            Alt Başlık
                        </th>
                        <th>
                            Tarih
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>
                                @x.Id
                            </td>
                            <td>
                                @x.Title
                            </td>
                            <td>
                                @x.Subtitle
                            </td>
                            <td>
                                @x.Date
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="/Experience/EditExperience/@x.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Experience/DeleteExperience/@x.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <a class="btn btn-success btn-sm" href="/Experience/AddExperience/">
            <i class="fas fa-save">
            </i>
            Yeni Deneyim Ekle
        </a>
        </div>
</section>