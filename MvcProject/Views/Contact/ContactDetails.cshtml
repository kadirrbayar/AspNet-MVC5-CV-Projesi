@model MvcProject.Models.Entity.Contact
@{
    ViewBag.Title = "ContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int previousId = Model.Id - 1;
    int nextId = Model.Id + 1;
}
<div class="col-md-12">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Gelen Kutusu</h3>
            <div class="card-tools">
                <a href="/Contact/ContactDetails/@previousId" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                <a href="/Contact/ContactDetails/@nextId" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="mailbox-read-info">
                <h5>@Model.Subject</h5>
                <h6>
                    Kimden: @Model.Mail
                    <span class="mailbox-read-time float-right">@DateTime.Parse(@Model.Date.ToString()).ToString("dd/MMM/yyyy")</span>
                </h6>
            </div>
            <div class="mailbox-read-message">
                <p>@Model.Message</p>
            </div>
        </div>

        <div class="card-footer">
            <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</button>
        </div>
    </div>
</div>