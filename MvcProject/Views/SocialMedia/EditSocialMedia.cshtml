@model MvcProject.Models.Entity.SocialMedia
@{
    ViewBag.Title = "EditSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-gray-dark">
                <div class="card-header">
                    <h3 class="card-title">Hesap Düzenleme Paneli</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label>Platform:</label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Platform" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Link:</label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Link" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Icon:</label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", @placeholder = "İkon" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Aktif Durum:</label>
                            <select class="form-control" name="Active">
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" class="btn btn-outline-dark">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


