@model MvcProject.Models.Entity.Interests

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Hobilerim</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label>Hobilerim 1</label>
                            @Html.TextAreaFor(x => x.Content1, 8, 3, new { @class = "form-control", @placeholder = "Hobilerim" })
                        </div>
                        <div class="form-group">
                            <label>Hobilerim 2</label>
                            @Html.TextAreaFor(x => x.Content2, 8, 3, new { @class = "form-control", @placeholder = "Hobilerim" })
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" onclick="myFunction()" class="btn btn-info"><i class="far fa-paper-plane"></i> Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function myFunction() {
        alert("Başarıyla Güncellendi.");
    }
</script>
