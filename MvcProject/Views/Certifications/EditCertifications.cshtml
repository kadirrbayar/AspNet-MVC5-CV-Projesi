@model MvcProject.Models.Entity.Certifications

@{
    ViewBag.Title = "EditCertifications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Sertifika Düzenleme Paneli</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label>Sertifika Başlığı:</label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Sertifika Adı" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Tarih:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" class="btn btn-warning">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
