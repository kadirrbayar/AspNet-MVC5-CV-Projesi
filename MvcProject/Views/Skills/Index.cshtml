@using MvcProject.Models.Entity
@model List<Skills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Tüm Beceriler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Yetenek
                        </th>
                        <th style="width: 30%">
                            Seviye
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        if (x.Level >= 0 && x.Level <= 25)
                        {
                            color = "bg-red";
                        }                        
                        if (x.Level > 25 && x.Level <= 50)
                        {
                            color = "bg-blue";
                        }    
                        if (x.Level > 50 && x.Level <= 75)
                        {
                            color = "bg-pink";
                        }    
                        if (x.Level > 75 && x.Level <= 100)
                        {
                            color = "bg-green";
                        }

                        <tr>
                            <td>
                                @x.Id
                            </td>
                            <td>
                                @x.Title
                            </td>
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar @color" role="progressbar" aria-volumenow="@x.Level" aria-volumemin="0" aria-volumemax="100" style="width: @x.Level%">
                                    </div>
                                </div>
                                <small>
                                    @x.Level%
                                </small>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="/Skills/EditSkill/@x.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Skills/DeleteSkill/@x.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <a class="btn btn-primary btn-sm" href="/Skills/AddSkill/">
            <i class="fas fa-save">
            </i>
            Yeni Yetenek Ekle
        </a>
    </div>
</section>

